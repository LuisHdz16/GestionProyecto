@page
@model CRM.Pages.RegistroTratamientosModel
@{
    ViewData["Title"] = "Registro de Tratamientos";
}

<h2>Registrar Tratamiento</h2>

<form method="post" class="needs-validation" novalidate>
    <label for="Cliente">Nombre del Cliente:</label><br>
    <select asp-for="Cliente" id="Cliente" required>
        <option value="">Seleccione un cliente</option>
        @foreach (var cliente in Model.Clientes)
        {
            <option value="@cliente">@cliente</option>
        }
    </select><br>
    <span asp-validation-for="Cliente" class="text-danger"></span><br>

    <label for="Tratamiento">Tratamiento realizado:</label><br>
    <select asp-for="Tratamiento" id="Tratamiento" required>
        <option value="">Seleccione un tratamiento</option>
        <option value="Tratamiento A">Tratamiento A</option>
        <option value="Tratamiento B">Tratamiento B</option>
        <option value="Tratamiento C">Tratamiento C</option>
    </select><br>
    <span asp-validation-for="Tratamiento" class="text-danger"></span><br>

    <label for="Encargado">Persona encargada:</label><br>
    <select asp-for="Encargado" id="Encargado" required>
        <option value="">Seleccione una persona</option>
        <option value="Persona 1">Persona 1</option>
        <option value="Persona 2">Persona 2</option>
        <option value="Persona 3">Persona 3</option>
    </select><br>
    <span asp-validation-for="Encargado" class="text-danger"></span><br>

    <label asp-for="Monto" for="Monto">Monto (solo números):</label><br>
    <input asp-for="Monto" type="number" id="Monto" name="Monto" required><br>
    <span asp-validation-for="Monto" class="text-danger"></span><br>

    <label asp-for="Fecha" for="Fecha">Fecha del Tratamiento:</label><br>
    <input asp-for="Fecha" type="date" id="Fecha" name="Fecha" required><br>
    <span asp-validation-for="Fecha" class="text-danger"></span><br>

    <button type="submit" class="btn btn-success mt-3">Registrar Tratamiento</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
