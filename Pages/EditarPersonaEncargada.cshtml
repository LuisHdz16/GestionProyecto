@page "{id:int}"
@model CRM.Pages.EditarPersonaEncargadaModel
@{
    ViewData["Title"] = "Editar Persona Encargada";
}


<form method="post">
    <div class="form-group">
        <label asp-for="Nombre">Nombre:</label>
        <input asp-for="Nombre" type="text" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="Puesto">Puesto:</label>
        <input asp-for="Puesto" type="text" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-success mt-3">Actualizar Persona</button>
</form>
