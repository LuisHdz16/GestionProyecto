@page
@model CRM.Pages.AgregarTratamientoModel
@{
    ViewData["Title"] = "Agregar Tratamiento";
}

<a href="/VerTratamientos" class="btn btn-primary btn-lg btn-block mt-3 mb-5">Regresar</a>

<form method="post">
    <div class="form-group">
        <label asp-for="NombreTratamiento">Nombre del Tratamiento:</label>
        <input asp-for="NombreTratamiento" type="text" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="PrecioTratamiento">Precio:</label>
        <input asp-for="PrecioTratamiento" type="number" step="0.01" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-success mt-3">Agregar Tratamiento</button>
</form>
